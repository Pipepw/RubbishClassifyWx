<template name="OngoingItem">
            <view class='secondlayout'>
                <image src="{{imagesrc}}" class='firstimagestyle'></image>
                <view class='containeritem'>
                    <view class='secondlayoutitemtwo'>
                    <text>{{name}}</text>
                <view class='secondlayoutitem' >
                    <text>订单详情</text>
                </view>
            </view>
            <view class='firstlayoutitemthree'>
                <text class='thirdfondstyle'>缺少项：</text>
                <text class='thirdfondstyle'>{{lackofitems}}</text>
            </view>
            <view class='firstlayoutitemfour'>
                <text class='secondfondstyle'>¥ {{price}}</text>
                <view class='firstlayoutitemfouritem' >
                    <text class='textorder' catchtap="showToast">我要预约</text>
                </view>
            </view>
        </view>
    </view>
    <view class='lineview'></view>
</template>