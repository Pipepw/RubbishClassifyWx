<!--pages/post/post-detail/post-detail.wxml-->
<!--先静后动，先样式再数据-->
<view class="detail-container">
  <image class="head-image" src="http://106.13.235.119:8080/icon/垃圾分类.png"></image>
  <view class="author-date">
    <!-- 头像 -->
    <image class="avatar" src="http://106.13.235.119:8080/icon/垃圾分类.png"></image>
    <text class="author">{{introduction[index].author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{introduction[index].date}}</text>
  </view>
  <text class="title">{{introduction[index].title}}</text>
  <view class="tool">
    <view class="circle-img">
      <!-- <image src="/images/icon/collection.png"></image>
      <image class="share-img" src="/images/icon/share.png"></image> -->
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{introduction[index].article}}</text>
</view>
